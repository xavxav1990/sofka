version: '3.8'

services:
  db:
    image: postgres:15.2-alpine3.17
    restart: always
    environment:
      POSTGRES_DB: yourdatabase
      POSTGRES_USER: walrus
      POSTGRES_PASSWORD: 12345
    ports:
      - "5432:5432"
    volumes:
      - ./src/test/resources/db/init.sql:/docker-entrypoint-initdb.d/create_tables.sql

  adminer:
    image: adminer
    restart: always
    ports:
      - 8081:8080

  app:
    image: openjdk:11
    container_name: spring-boot-app
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://db:5432/yourdatabase
      SPRING_DATASOURCE_USERNAME: walrus
      SPRING_DATASOURCE_PASSWORD: 12345
    ports:
      - "8080:8080"
    depends_on:
      - db

volumes:
  postgres_data:
